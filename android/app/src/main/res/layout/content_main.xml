<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <Button
            android:text="らんど"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rand_button"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="312dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="30sp"/>
    <TextView
            android:text="場所:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/place_title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="84dp" android:textSize="24sp"
            android:layout_marginEnd="256dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.739"/>
    <TextView
            android:text="国料理: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/food_country_title"
            app:layout_constraintTop_toBottomOf="@+id/place_title" android:layout_marginTop="44dp"
            android:textSize="24sp" android:layout_marginEnd="276dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/food_place" app:layout_constraintStart_toEndOf="@+id/place_title"
            android:layout_marginStart="56dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="84dp" android:textSize="24sp"/>
    <TextView
            android:text="food_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/food_country" app:layout_constraintStart_toEndOf="@+id/food_country_title"
            android:layout_marginStart="52dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/food_place" android:textSize="24sp"/>

</android.support.constraint.ConstraintLayout>